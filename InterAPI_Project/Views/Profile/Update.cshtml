@model InterAPI_Project.Models.EntityFramework.User

@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Update", "Profile", FormMethod.Post))
{
<div class="form-group" style="margin-left:35%; padding-top: 100px">
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })

    @Html.LabelFor(model => model.Surname)
    @Html.TextBoxFor(model => model.Surname, new { @class = "form-control" })

    @Html.LabelFor(model => model.Email)
    @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
    <br />
    <button type="submit" class="btn btn-success"> Save </button>
</div>
    @*@Html.HiddenFor(model => model.Id)*@

}